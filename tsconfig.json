{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ESNext",
        "noEmit": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["vite/client", "node"], // node 타입을 추가합니다.
        "baseUrl": "./src", // baseUrl을 src로 설정
        "paths": {
            "@/*": ["*"] // @를 src 폴더로 매핑
        }
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
}
